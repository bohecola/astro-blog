---
import dayjs from 'dayjs';

interface Props {
  slug: string;
  title: string;
  pubDate: string | Date;
}

const { slug, title, pubDate } = Astro.props;
---

<li class="mt-2 mb-6">
  <a href={`/posts/${slug}`}>
    <div class="flex flex-col gap-1 mb-2 font-medium opacity-80 hover:opacity-100 md:flex-row md:gap-2 md:items-center">
      <span class="text-lg">{title}</span>
      <span class="text-sm opacity-70">{dayjs(pubDate).format('MMM DD, YYYY')}</span>
    </div>
  </a>
</li>