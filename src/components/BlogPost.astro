---
import dayjs from 'dayjs';
import type { CollectionEntry } from 'astro:content';

interface Props {
  post: CollectionEntry<'posts'>,
  prefix?: string
}

const { post, prefix = '/posts' } = Astro.props;
---

<li class="mt-2 mb-6">
  <a href={`${prefix}/${post.slug}`} class="group">
    <span class="mr-2 text-lg decoration-dashed decoration-2 underline-offset-4 group-hover:underline">{post.data.title}</span>
    <br class="md:hidden">
    <span class="text-sm">{dayjs(post.data.pubDate).format('MMM DD, YYYY')}</span>
  </a>
</li>