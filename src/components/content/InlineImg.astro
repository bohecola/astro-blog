---
import { Image } from 'astro:assets';

interface Props {
  src: string;
  alt: string;
  width: number | `${number}`;
  height: number | `${number}`;
  format: string;
}

const { src, alt, width = '20' , height = '20', format = 'webp' } = Astro.props
---

<Image
  class="not-prose inline-block align-text-bottom mx-1"
  src={src}
  alt={alt}
  width={width}
  height={height}
  format={format}
/>